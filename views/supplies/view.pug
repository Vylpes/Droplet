extends ../layout

block content
    a(href="/supply-purchases/view/" + item.Purchase.Id).btn.text-primary
        i.fas.fa-chevron-circle-left
        span.ms-1 Back to Purchase
    .row.mt-3
        .col
            h1= item.Name
        .col
            .d-grid.gap-2.d-md-flex.justify-content-md-end
                button(data-bs-toggle='modal' data-bs-target='#add-note-modal').btn.text-secondary
                    i.fas.fa-comment
                    span.ms-1 Add Note
                button(data-bs-toggle='modal' data-bs-target='#edit-quantity-modal').btn.text-secondary
                    i.fas.fa-edit
                    span.ms-1 Quantity
                button(data-bs-toggle='modal' data-bs-target='#edit-item-modal').btn.text-primary
                    i.fas.fa-edit
                    span.ms-1 Edit
    .row.mt-3
        .col
            .card
                .card-header Basic Details
                .card-body
                    .mb-2
                        p.mb-0.text-secondary SKU
                        p= item.Sku
                    .mb-2
                        p.mb-0.text-secondary Buy Price
                        p= item.BuyPrice
        .col
            .card
                .card-header Quantity
                .card-body
                    .mb-2
                        p.mb-0.text-secondary Unused
                        p= item.UnusedQuantity
                    .mb-2
                        p.mb-0.text-secondary Used
                        p= item.UsedQuantity
    .row.mt-3
        .col-8
            .card
                .card-header Notes
                .card-body
                    each note in notes
                        p= note.Text
                        p.text-secondary= '- ' + note.WhenCreated
                        hr
    form(method='POST' action='/supplies/' + item.Id + '/update').modal.fade#edit-item-modal
        .modal-dialog.modal-dialog-scrollable
            .modal-content
                .modal-header
                    h5.modal-title Edit Supply
                    button(type='button' data-bs-dismiss='modal').btn-close
                .modal-body
                    .form-group.mb-3
                        label Name
                        input(type='text' name='name' value=item.Name).form-control
                    .form-group.mb-3
                        label Sku
                        input(type='text' name='sku' value=item.Sku).form-control
                    .form-group.text-center
                        button(type='submit').btn.text-primary
                            i.fas.fa-check-square
                            span.ms-1 Update
    form(method='POST' action='/supplies/' + item.Id + '/update-quantity').modal.fade#edit-quantity-modal
        .modal-dialog.modal-dialog-scrollable
            .modal-content
                .modal-header
                    h5.modal-title Edit Quantity
                    button(type='button' data-bs-dismiss='modal').btn-close
                .modal-body
                    .form-group.mb-3
                        label Unused
                        input(type='number' step="1" name='unused' value=item.UnusedQuantity).form-control
                    .form-group.mb-3
                        label Used
                        input(type='number' step="1" name='used' value=item.UsedQuantity).form-control
                    .form-group.text-center
                        button(type='submit').btn.text-primary
                            i.fas.fa-check-square
                            span.ms-1 Update
    form(method='POST' action='/supplies/' + item.Id + '/add-note').modal.fade#add-note-modal
        .modal-dialog.modal-dialog-scrollable
            .modal-content
                .modal-header
                    h5.modal-title Add Note
                    button(type='button' data-bs-dismiss='modal').btn-close
                .modal-body
                    .form-group.mb-3
                        label Text
                        input(type='text' name='text').form-control
                    .form-group.text-center
                        button(type='submit').btn.text-primary
                            i.fas.fa-check-square
                            span.ms-1 Add