doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/datatables/datatables.min.css')
        link(rel='stylesheet', href='/lib/fontawesome/css/all.min.css')
        link(rel='stylesheet', href='/css/style.css')
        block styles
    body
        if isAuthenticated
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/dashboard") Droplet
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(href="/dashboard") Dashboard
                            li.nav-item
                                a.nav-link(href="/item-purchases/ordered") Items
                            li.nav-item
                                a.nav-link(href="/supply-purchases/ordered") Supplies
                            li.nav-item
                                a.nav-link(href="/storage/list/building/all") Storage
                            li.nav-item
                                a.nav-link(href="/listings/active") Listings
                            li.nav-item
                                a.nav-link(href="/orders/awaiting-payment") Orders
                            li.nav-item
                                a.nav-link(href="/returns/opened") Returns
                            li.nav-item
                                a.nav-link(href="/postage-policies") Postage Policies
                        ul.navbar-nav.ms-auto.mb-2.mb-lg-0.float-right
                            li.nav-item
                                a.nav-link(href="/auth/logout") Logout
                            li.nav-item
                                a.nav-link(href="/dashboard/calculator")
                                    i.fas.fa-calculator
                            li.nav-item
                                a.nav-link(href="/settings/account")
                                    i.fas.fa-cog
                        span.navbar-text.ms-1 Logged in as #{user.Username}
        else
            nav.navbar.navbar-expand-lg.navbar-light.bg-light
                .container-fluid
                    a.navbar-brand(href="/") Droplet
                    button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarSupportedContent
                        ul.navbar-nav.me-auto.mb-2.mb-lg-0
                            li.nav-item
                                a.nav-link(aria-current="page" href="/") Home
                        ul.navbar-nav.ms-auto.mb-2.mb-lg-0.float-right
                            li.nav-item
                                a.nav-link(href="/auth/login") Login
        .container.mt-3
            if (error)
                each err in error
                    .alert.alert-danger= err
            if (info)
                each msg in info
                    .alert.alert-info= msg
            block content
        script(src='/lib/jquery/js/jquery.min.js')
        script(src='/lib/bootstrap/js/bootstrap.min.js')
        script(src='/lib/datatables/datatables.min.js')
        script(src='/lib/fontawesome/js/all.min.js')
        block scripts
