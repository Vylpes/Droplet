extends ../layout

block content
    .row
        .col-6.m-auto
            .card
                .card-header Login
                .card-body
                    form(method='post' action='/auth/login')
                        .form-group.mb-2
                            label Email
                            input(type='email' name='email').form-control
                        .form-group.mb-2
                            label Password
                            input(type='password' name='password').form-control
                        .form-group
                            input(type='submit' value='Login').btn.btn-primary.w-100.mb-1
                            a(href="/auth/password-reset/request").text-secondary.me-3 Forgot Password?
                            a(href="/auth/verification-token/request").text-secondary Didn't receive invite?